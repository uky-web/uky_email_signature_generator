<head>
  <style>
    body {font-size: 14px; line-height: 18px;}
    table {margin:0;padding:0;}
    tr {margin:0;padding:0;}
    .headshot {border-radius: 100%; max-width:100%; max-height: 100%;}
    .font {font-family:georgia,times,serif;}
    .inner-td{margin:0;padding:0;white-space:nowrap;}
    .color-tr{color:#b0a49b;}
    .logo-td1 {width:100px;margin:0;padding-right:10px; vertical-align: top;}
    .logo-td2{width:5px;}
    .right-top-td{margin:0;padding:0 20px; line-height: 1.3em; border-left:1px solid #0033a0;}
    .right-table{border:none;text-decoration:none;font-family:georgia,times,serif;font-size:14px;color:#0033a0;border-collapse:collapse;-webkit-text-size-adjust:none;}
    .name-span{font-size:1.6em;color:#0033a0;}
    .cred-span{font-size:1.5em;color:#0033a0;}
    .position-span{color:#0033a0;}
    .company-span{color:#0033a0; font-weight: 600;}
    .phone-letter{color:#0033a0;}
    .no-dec{border:none;text-decoration:none;}
    .phone-number{border:none;color:#0033a0;text-decoration:none;}
    .web-link{color:#0033a0;text-decoration:none;}
  </style>
</head>
<body>
<div>
  <table width="320" id="sig" cellspacing="0" cellpadding="0" border-spacing="0">
    <tr>
      <td width="110" class="top-td logo-td1">
        <img id="top-logo"  border="0" width="100" height="71" src="https://uknow.uky.edu/sites/default/files/UK-logo.png">
      </td>
      <!-- Right Side Info -->
      <td valign="top" class="right-top-td">
        <table id="sig2" cellspacing="0" cellpadding="0" border-spacing="0" class="right-table">
          <!-- Name and Credentials -->
          <tr>
            <td class="inner-td font">
              <span class="name-span">{{ data.name }}</span><span id="creds" class="cred-span">{{ data.creds }}</span>
            </td>
          </tr>
          <!-- Pronouns -->
          <tr id="pronouns">
            <td class="inner-td font">
              <span class="pronouns-span">{{ data.pronouns }}</span>
            </td>
          </tr>
          <!-- Title/Position -->
          <tr id="title">
            <td class="inner-td font">
              <span class="position-span">{{ data.title }}</span>
            </td>
          </tr>
          <!-- Division -->
          <tr id="org">
            <td class="inner-td font">
              <span class="position-span">University of Kentucky</span>
            </td>
          </tr>
          <!-- Division -->
          <tr id="department">
            <td class="inner-td font">
              <span class="position-span">{{ data.department }}</span>
            </td>
          </tr>
          <!-- Address -->
          <tr id="address">
            <td class="inner-td font">
              <span class="position-span">{{ data.address }}</span>
            </td>
          </tr>
          <!-- City -->
          <tr id="city">
            <td class="inner-td font">
              <span class="position-span">{{ data.city }}</span>
            </td>
          </tr>
          <!-- Phone Number -->
          <tr class="color-tr" id="phone">
            <td class="inner-td">
              <a href="tel:{{ data.phone }}" target="_blank" class="no-dec"><span class="phone-number">{{ data.phone }}</span></a>
            </td>
          </tr>
          <!-- Email -->
          <tr class="color-tr" id="email">
            <td class="inner-td">
              <a href="mailto:{{ data.email }}" target="_blank" class="no-dec web-link"></a>{{ data.email }}</a>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</div>
</body>
